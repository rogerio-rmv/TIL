<table border="0" widh="100%">
    <tr>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImages" 
                asp-action="UploadFiles">

                <img src="~/images/upload.png" with="200" height="150" />

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Selecione um ou mais arquvios para enviar: </b></p>
                        <p>(Arquivos com o mesmo nome serão sobrescritos)</p>
                        <input type="file" name="files" multiple class="button btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivos(s)" class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImages"
                  asp-action="GetImagens">

                <img src="~/images/visualizar.png" with="200" height="150" />

                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>Visualizar imagens na pasta do servidor:</strong></p>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar arquivos no servidor" class="button btn-outline-primary" />
                    </div>
                </div>

            </form>
        </td>
    </tr>
</table>
<div class="container">
    @if(ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }
</div>